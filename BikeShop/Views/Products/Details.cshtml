@model DetailsViewModel
@{
    var product = Model.Product;
}

<div class="container mt-5 pb-5 w-50">
    <h1>Bike Details</h1>
    <div class="card mt-4">
        <img class="card-img-top" src="https://via.placeholder.com/350x150" alt="Bike Image">
        <div class="card-body">
            <h5 class="card-title">@product.Name</h5>
            <p class="card-text">Price: $@product.Price</p>
            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse eu mauris euismod, finibus sapien nec, ullamcorper sapien.</p>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">#</span>
                <input type="text" class="form-control" placeholder="How many would you like to order?">
                <a asp-action="submit" asp-controller="products" class="btn btn-outline-secondary">Submit</a>
            </div>
        </div>
    </div>
</div>
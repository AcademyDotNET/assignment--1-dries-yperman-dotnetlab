@model ProductsViewModel
@{

}

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Bikeshop</h1>
            <p class="lead fw-normal text-white-50 mb-0">Buy all your bikes here!</p>
        </div>
    </div>
</header>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">

        @{
            var prevDisabled = !Model.Products.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.Products.HasNextPage ? "disabled" : "";
        }

        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.Name</h5>
                                <!-- Product price-->
                            @product.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a asp-action="details" asp-controller="products" asp-route-id="@product.Id" class="btn btn-outline-dark mt-auto">Buy</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.Products.PageIndex - 1)"
               class="btn btn-default @prevDisabled">
                Previous
            </a>

            <a asp-action="Index"
               asp-route-pageNumber="@(Model.Products.PageIndex + 1)"
               class="btn btn-default @nextDisabled">
                Next
            </a>
        </div>

    </div>
</section>
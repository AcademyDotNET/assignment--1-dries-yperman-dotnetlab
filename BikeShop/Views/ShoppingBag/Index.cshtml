@model ShoppingBagViewModel
@{
    var shoppingBag = Model.ShoppingBag;
    Console.WriteLine(shoppingBag.Items.Count);
}

<section class="h-100">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Bag</h3>
                </div>
                
                @foreach(var item in shoppingBag.Items)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="https://via.placeholder.com/350x150"
                                         class="img-fluid rounded-3" alt="@item.ProductId">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">Product with id: @item.ProductId</p>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <p class="lead fw-normal mb-2">Quantity: @item.Quantity</p>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">€@item.Quantity * product price</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                

                <div class="card">
                    <div class="card-body">
                        <button type="button" class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>